{
    "settings":{
      "analysis":{
         "analyzer":{
            "simple_analyzer":{ 
               "type":"custom",
               "tokenizer":"standard",
               "filter":[
                  "lowercase"
               ]
            },
            "simple_stop_analyzer":{ 
               "type":"custom",
               "tokenizer":"standard",
               "filter":[
                  "lowercase",
                  "english_stop"
               ]
            }
         },
         "filter":{
            "english_stop":{
               "type":"stop",
               "stopwords":"_english_"
            }
         }
      }
   },  
  "mappings": {
    "properties": {
      "artistCreditId": {
        "type": "long"
      },
       "artistCreditName": {
        "type": "text",
        "analyzer":"my_analyzer", 
        "search_analyzer":"my_stop_analyzer", 
        "search_quote_analyzer":"my_analyzer" 
      },
       "count": {
        "type": "integer"
      },
       "refCount": {
        "type": "integer"
      }
    }
  }
}
